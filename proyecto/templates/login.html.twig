{% extends 'layout.html.twig' %}
{% block body %}
	{% if error %}
		<div>{{ error.messageKey }}</div>
	{% endif %}
	<!-- Default form login -->
		<div class="row vh-100 justify-content-center">
			<div class="col-lg-4 my-auto mx-auto">
				<form class="text-center border border-light p-5" action="{{ path('login') }}" method="post">

					<p class="h4 mb-4">Logueate</p>

					<!-- Usuario -->
					<input type="text" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="Usuario" name="_username">

					<!-- Password -->
					<input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Contraseña" name="_password">


					<!-- Sign in button -->
					<button class="btn btn-info darken-1 btn-lg-block my-4" type="submit">Entrar</button>

					<!-- Register -->
					<p>¿Aún no te has registrado?
						<a href="{{ path('registrar') }}">Regístrate</a>
					</p>
				</form>
			</div>
		</div>
	<footer class="page-footer font-small">
		<div class="row justify-content-center black">
			<div class="col-lg-4 text-center mt-3"style="height:300px;">
				<span class="d-block text-white mt-2 mb-5">
					<span class="navbar-brand ml-5"><img src="{{ asset('img/logo.png') }}" width="50px" height="50px"></span>
					<strong>Aprende y Conduce</strong></span>
				<span class="ml-2 d-block text-white my-2"><strong>Teléfono: 966.87.07.00</strong></span>
				<span class="ml-2 d-block text-white mt-2 mb-5"><strong>Email: aprendeyconduce@contacto.es</strong></span>
				<span class="ml-2 d-block text-white mt-5">&copy;Aprende y conduce todos los derechos reservados</span>
			</div>
		</div>
	</footer>
{% endblock %}
