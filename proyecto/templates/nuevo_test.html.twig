{% extends "layout.html.twig" %}
{% block body %}
	<div class="row justify-content-center">
		<div class="col-lg-6 mt-5 text-center">
			<h1>Seleccione un total de 10 preguntas y el tipo de test para continuar</h1>
			<div class="row justify-content-center">
				<select id="tipoTest" class="browser-default custom-select-md">
					<option value="A">Tipo A</option>
					<option value="B">Tipo B</option>
					<option value="C">Tipo C</option>
				</select>
			</div>
			<table class="table">
				<thead class="border">
					<tr class="text-center pink darken-1">
						<th class="border" scope="col">Checkbox</th>
						<th class="border" scope="col">Enunciado de las preguntas</th>
					</tr>
				</thead>
				{% for pregunta in arrayPreguntas %}
					<tr>
						<td class="border"><input type="checkbox" value="{{pregunta.id}}"></td>
						<td class="border">{{pregunta.pregunta}}</td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>
		<div class="row justify-content-center">
			<button id="btnCancelar" class="btn btn-danger">Cancelar</button>
			<button id="btnCrear" class="btn btn-info">Crear</button>
		</div>
		<div id="contador">
			<p>Seleccione
				<span id="contador1">
					preguntas</span>
				más</p>
		</div>
<footer class="page-footer font-small">
		<div class="row justify-content-center black">
			<div class="col-lg-4 text-center mt-3"style="height:300px;">
				<span class="d-block text-white mt-2 mb-5">
					<span class="navbar-brand ml-5"><img src="{{ asset('img/logo.png') }}" width="50px" height="50px"></span>
					<strong>Aprende y Conduce</strong></span>
				<span class="ml-2 d-block text-white my-2"><strong>Teléfono: 966.87.07.00</strong></span>
				<span class="ml-2 d-block text-white mt-2 mb-5"><strong>Email: aprendeyconduce@contacto.es</strong></span>
				<span class="ml-2 d-block text-white mt-5">&copy;Aprende y conduce todos los derechos reservados</span>
			</div>
		</div>
	</footer>
{% endblock %}
