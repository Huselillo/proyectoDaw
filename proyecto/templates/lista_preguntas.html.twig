{% extends "layout.html.twig" %}
{% block body %}
<div class="row justify-content-center my-4">
		<div class="col-lg-6  ml-5 text-center">
			<table class="table">
				<thead class="border">
					<tr class="text-center pink darken-1">
						<th class="border" scope="col">ID Pregunta</th>
						<th class="border" scope="col">Enunciado</th>
						<th class="border" scope="col">Accion</th>
					</tr>
				</thead>
				<tbody class="border">
	            {% set miContador = 1 %}
                {% for pregunta in preguntas %}
					<tr>
						<td class="border">{{ miContador }}</td>
						<td class="border">{{ pregunta.pregunta }}</td>
						<td class="border"><a href="{{ path('eliminarPregunta',{'id':pregunta.id}) }}"><i class="fas fa-trash-alt"></i></a>
				            <a href="{{ path('editarPregunta',{'id':pregunta.id}) }}"><i class="fas fa-edit"></i></a></td>
					</tr>
                {% set miContador = miContador + 1 %}
                {% endfor %}
				</tbody>
			</table>
		</div>
</div>
		<footer class="page-footer font-small">
		<div class="row justify-content-center black">
			<div class="col-lg-4 text-center mt-3"style="height:300px;">
				<span class="d-block text-white mt-2 mb-5">
					<span class="navbar-brand ml-5"><img src="{{ asset('img/logo.png') }}" width="50px" height="50px"></span>
					<strong>Aprende y Conduce</strong></span>
				<span class="ml-2 d-block text-white my-2"><strong>Tel√©fono: 966.87.07.00</strong></span>
				<span class="ml-2 d-block text-white mt-2 mb-5"><strong>Email: aprendeyconduce@contacto.es</strong></span>
				<span class="ml-2 d-block text-white mt-5">&copy;Aprende y conduce todos los derechos reservados</span>
			</div>
		</div>
	</footer>
{% endblock %}

